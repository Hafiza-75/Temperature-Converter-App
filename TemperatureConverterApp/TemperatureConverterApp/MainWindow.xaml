<Window x:Class="TemperatureConverterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemperatureConverterApp"
        mc:Ignorable="d"
        Title="Temperature Converter" Height="450" Width="800" Background="#f5f5f5">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">

            <!-- Header -->
            <TextBlock Text="🌡️ Temperature Converter" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#333" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20" />

            <!-- Fahrenheit Input -->
            <TextBlock Text="Enter Fahrenheit:" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5" />

            <TextBox Name="FahrenheitInput" 
                     FontSize="16" 
                     Height="35" 
                     Margin="0,0,0,15"
                     Padding="5" 
                     Background="White" 
                     BorderBrush="#ccc" 
                     BorderThickness="1"/>

            <!-- Convert Button -->
            <Button Content="Convert to Celsius" 
                    Background="#007ACC" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    FontSize="16" 
                    Height="40" 
                    Click="ConvertButton_Click" 
                    Margin="0,0,0,15" 
                    Cursor="Hand"/>

            <!-- Result -->
            <Label Name="ResultLabel" 
                   Content="Result: °C" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="#444" 
                   Margin="0,10,0,0" 
                   HorizontalContentAlignment="Center"/>

        </StackPanel>
    </Grid>
</Window>
